{
    "name": "sulu/workshop",
    "description": "Project base for Symfony Live workshop.",
    "license": "proprietary",
    "type": "project",
    "require": {
        "php": "^7.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "dantleech/phpcr-migrations-bundle": "^1.2",
        "doctrine/doctrine-bundle": "^2.0",
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "doctrine/doctrine-migrations-bundle": "^2.0",
        "friendsofsymfony/http-cache-bundle": "^2.8",
        "jackalope/jackalope-doctrine-dbal": "^1.3.4",
        "sulu/sulu": "^2.1",
        "symfony/config": "^5.1",
        "symfony/dotenv": "^5.1",
        "symfony/flex": "^1.2",
        "symfony/framework-bundle": "^5.1",
        "symfony/monolog-bridge": "^5.1",
        "symfony/monolog-bundle": "^3.1",
        "symfony/security-bundle": "^5.1",
        "symfony/swiftmailer-bundle": "^2.6.4 || ^3.0",
        "symfony/twig-bundle": "^5.1",
        "symfony/webpack-encore-bundle": "^1.6",
        "handcraftedinthealps/zendsearch": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "jangregor/phpstan-prophecy": "^0.8",
        "phpcr/phpcr-shell": "^1.2",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-doctrine": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12",
        "phpstan/phpstan-symfony": "^0.12",
        "phpstan/phpstan-webmozart-assert": "^0.12",
        "sensiolabs/security-checker": "^6.0",
        "symfony/browser-kit": "^5.1",
        "symfony/debug-bundle": "^5.1",
        "symfony/error-handler": "^5.1",
        "symfony/maker-bundle": "^1.13",
        "symfony/phpunit-bridge": "^5.1",
        "symfony/thanks": "^1.1",
        "symfony/web-profiler-bundle": "^5.1",
        "thecodingmachine/phpstan-strict-rules": "^0.12"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        },
        "exclude-from-classmap": [
            "/src/DataFixtures/",
            "/src/Migrations/"
        ]
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "bin/websiteconsole cache:clear": "php-script",
            "bin/adminconsole sulu:media:init": "php-script",
            "bin/adminconsole massive:search:init": "php-script",
            "security-checker security:check": "script"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "post-root-package-install": [
            "php -r \"file_put_contents('.env.local', 'APP_ENV=dev' . PHP_EOL);\"",
            "php -r \"file_put_contents('.env', str_replace('APP_SECRET=', 'APP_SECRET=' . bin2hex(random_bytes(16)), file_get_contents('.env')));\""
        ],
        "post-create-project-cmd": [
            "php -r \"file_put_contents('.gitignore', str_replace(['composer.lock' . PHP_EOL, 'symfony.lock' . PHP_EOL, 'package-lock.json' . PHP_EOL], ['', '', ''], file_get_contents('.gitignore')));\""
        ],
        "lint": [
            "@phpstan",
            "@php-cs",
            "@lint-twig",
            "@lint-yaml",
            "@lint-composer",
            "@schemavalidate"
        ],
        "test": [
            "@phpunit"
        ],
        "bootstrap-test-environment": [
            "@php bin/adminconsole doctrine:database:create --if-not-exists --env test",
            "@php bin/adminconsole doctrine:schema:update --force --env test"
        ],
        "phpunit": "bin/phpunit",
        "schemavalidate": "bin/adminconsole doctrine:schema:validate --skip-mapping",
        "security-check": "bin/websiteconsole security:check",
        "phpstan": [
            "bin/websiteconsole cache:warmup --env=dev",
            "@test install",
            "vendor/bin/phpstan analyze"
        ],
        "php-cs": "vendor/bin/php-cs-fixer fix --verbose --diff --dry-run",
        "php-cs-fix": "vendor/bin/php-cs-fixer fix",
        "lint-composer": "@composer validate --strict",
        "lint-twig": "bin/websiteconsole lint:twig templates/",
        "lint-yaml": "bin/websiteconsole lint:yaml config/"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.4.7"
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": true
        }
    }
}
